{
    "env": {
        "node": true,
        "commonjs": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module"
    },
    "rules": {
        "no-console": [
            "off" 
        ],
        "indent": [
            "error",
            "tab"
        ],       
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "block-scoped-var" : [
            "error"
        ],
        "eqeqeq" : [
            "error",
            "always"
        ],
        "no-multi-spaces" : [
            "error",
            { "ignoreEOLComments": false }
        ],
        "camelcase": [
            "error"
        ],
        "capitalized-comments": [
            "error"
        ],
        "comma-spacing": [
            "error", 
            { "before": false, "after": true }
        ] 
    }
}